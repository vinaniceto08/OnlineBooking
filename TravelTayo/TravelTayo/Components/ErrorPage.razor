@page "/errorpage"
@inject NavigationManager Navigation

<div class="container text-center my-5">
    <h1 class="display-4 text-danger">Oops! Something went wrong.</h1>
    <p class="lead">We encountered an unexpected error. Please try again later.</p>
    <button class="btn btn-primary mt-3" @onclick="GoHome">Go to Home</button>
</div>

@code {
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }
}