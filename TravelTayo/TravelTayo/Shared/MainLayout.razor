@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider


<div class="d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom shadow-sm">
        <div class="container-fluid px-5">
            <!-- Logo + Brand + Slogan -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/images/logo.png" alt="Travel Tayo" style="height:100px;" class="me-3" />

                <div class="d-flex flex-column justify-content-center">
                    <span class="main-text" style="font-size:3rem;">Travel-Tayo</span>
                    <span class="slogan-text" style="font-size:.8rem;">TRAVEL TOGETHER, SMILE TOGETHER.</span>
                </div>
            </a>


            <!-- Navbar Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-lg-center">

                    @if (isAuthenticated)
                    {
                        <li class="nav-item">
                            <NavLink class="nav-link menu-hover d-flex align-items-center" href="/">
                                <i class="bi bi-house-door me-1"></i> Home
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link menu-hover d-flex align-items-center" href="/browse">
                                <i class="bi bi-building me-1"></i> Hotels & Homes
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link menu-hover d-flex align-items-center" href="/booking" Match="NavLinkMatch.All">
                                <i class="bi bi-calendar-check me-1"></i> My Booking
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link menu-hover d-flex align-items-center" href="/blog">
                                <i class="bi bi-journal-text me-1"></i> Family Travel Tips
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link menu-hover d-flex align-items-center" href="/contact">
                                <i class="bi bi-envelope me-1"></i> Contact
                            </NavLink>
                        </li>

                        <!-- Cart with badge -->
                        <li class="nav-item position-relative me-3">
                            <a class="nav-link menu-hover" href="/cart">
                                <i class="bi bi-cart3 fs-5"></i>
                                <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle">
                                    @cartCount
                                </span>
                            </a>
                        </li>

                        <!-- Username + dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle menu-hover" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Hi, @userName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li><NavLink class="dropdown-item" href="/account">My Account</NavLink></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="/MicrosoftIdentity/Account/SignOut">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <NavLink class="nav-link menu-hover d-flex align-items-center" href="/">
                                <i class="bi bi-house-door me-1"></i> Home
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link menu-hover d-flex align-items-center" href="/browse">
                                <i class="bi bi-building me-1"></i> Hotels & Homes
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link menu-hover d-flex align-items-center" href="/blog">
                                <i class="bi bi-journal-text me-1"></i> Family Travel Tips
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link menu-hover d-flex align-items-center" href="/contact">
                                <i class="bi bi-envelope me-1"></i> Contact
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link menu-hover d-flex align-items-center" href="/MicrosoftIdentity/Account/SignIn">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <!-- Main content -->
    <main class="flex-fill">
        @Body
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row">

                <!-- About Section -->
                <div class="col-md-4 mb-3">
                    <h5>About TravelTayo</h5>
                    <p class="small">
                        Your trusted family travel companion. Plan memorable adventures across Asia and beyond with ease..
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/browse" class="text-white text-decoration-none">Browse Hotels</a></li>
                        <li><a href="/about" class="text-white text-decoration-none">About</a></li>
                        <li><a href="/contact" class="text-white text-decoration-none">Contact</a></li>
                        <li><a href="/privacy-policy" class="text-white text-decoration-none">Privacy Policy</a></li>
                        <li><a href="/terms-of-service" class="text-white text-decoration-none">Terms of Service</a></li>
                    </ul>
                </div>

                <!-- Affiliate & Social -->
                <div class="col-md-4 mb-3 text-md-end">
                    <h5>Affiliate</h5>
                    <p class="small">
                        We collaborate with top hotels and B2B travel partners to make planning your family adventure simple, safe, and enjoyable.
                    </p>
                  @*   <div class="mt-2">
                        <a href="#" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white me-2"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white me-2"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-youtube"></i></a>
                    </div> *@
                </div>

            </div>

            <hr class="border-light" />

            <!-- Copyright -->
            <div class="row">
                <div class="col text-center small mt-1">
                    <p class="text-center small mb-0">
                        © 2025 <strong>TravelTayo</strong>. All rights reserved. <br>
                        Powered by <strong>MiraMar Premiere Travel Agency</strong> | Developed by Marvin Aniceto
                    </p>
          @*           <img src="/images/Monkey.png"
                         alt="Travel Tayo"
                         style="height:60px; vertical-align: middle; margin-left:5px;" /> *@
                </div>
            </div>
        </div>
    </footer>

</div>

<style>
    /* Highlight navbar links on hover */
    .menu-hover {
        transition: color 0.2s ease-in-out, border-bottom 0.2s ease-in-out;
    }
    .menu-hover:hover {
        color: #0d6efd !important; /* Bootstrap primary */
        border-bottom: 2px solid #0d6efd;
    }
</style>

@code {
    private bool isAuthenticated;
    private string? userName;
    private int cartCount = 0; // Replace with real cart logic later

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        if (isAuthenticated)
        {
            // Use B2C claim or Name/Email depending on setup
            userName = user.Identity?.Name
            ?? user.Claims.FirstOrDefault(c => c.Type == "emails")?.Value
            ?? "Marvin";
        }

        // TODO: Hook up cart count from state service
        cartCount = 3; // Example hard-coded
    }
}
