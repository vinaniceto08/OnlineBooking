@inherits LayoutComponentBase

<div class="d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="/">TravelTayo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><NavLink class="nav-link" href="/">Home</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="/browse">Browse</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="/booking">Booking</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="/blog">Blog</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="/contact">Contact</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="/account">My Account</NavLink></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="flex-fill">
        @Body
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-3 border-top mt-auto">
        <small>© @DateTime.Now.Year TravelTayo. All rights reserved.</small>
    </footer>
</div>
