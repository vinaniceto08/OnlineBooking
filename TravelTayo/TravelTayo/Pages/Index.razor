@page "/"



<!-- 🌍 HERO SECTION -->
<section class="hero-section position-relative" 
         style="height: 45vh; background: url('/images/home-bg-2.jpg') center/cover no-repeat;">
    
    <!-- Overlay -->
    <div class="hero-overlay d-flex flex-column justify-content-center align-items-center text-center p-0 position-absolute top-0 start-0 w-100 h-100">
        <h1 class="display-3 fw-bold text-white text-shadow animate__animated animate__fadeIn">Plan Memorable Family Adventures</h1>
        <p class="lead text-white text-shadow animate__animated animate__fadeIn" style="animation-delay: 0.3s;">
            Explore the world with your loved ones. Find hotels, resorts, and attractions easily with TravelTayo.
        </p>
       <a href="/browse" class="btn btn-lg btn-warning px-5 mt-3 animate__animated animate__pulse animate__infinite animate__delay-s">Start Booking Hotels</a>
    </div>
</section>





<!-- 🏨 HOTELS LISTING (Placeholder) -->
<section class="py-5 bg-light animate__animated animate__fadeIn" style="animation-delay: 0.5s;">
    <div class="container text-center">
        <section class="bg-light text-center mb-4">
          <h2 class="fw-bold text-primary">Available Hotels</h2>
        <p class="fst-italic">Hotel listings will appear here.</p>
    </section>
    </div>
    


</section>

<!-- 🧳 POPULAR DESTINATIONS -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold animate__animated animate__fadeIn">Popular Family Destinations</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var dest in popularDestinations)
            {
                <div class="col animate__animated animate__fadeInUp" style="animation-delay: 0.5s;">
                    <div class="card h-100 shadow-sm">
                        <img src="@dest.ImageUrl" class="card-img-top" alt="@dest.Name - Family Travel Destination" loading="lazy">
                        <div class="card-body text-center">
                            <h5 class="card-title">@dest.Name</h5>
                            <p class="card-text">@dest.Description</p>
                            <a href=@dest.AgodaAffiliateLink class="btn btn-primary mt-2" target="_blank">View Hotels</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- 🌟 TESTIMONIALS -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4 animate__animated animate__fadeIn">What Our Happy Travelers Say</h2>
        <div id="testimonialCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="6000">
            <div class="carousel-inner">
                @for (int i = 0; i < testimonials.Count; i++)
                {
                    var t = testimonials[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <div class="card border-0 shadow-lg text-center animate__animated animate__fadeInUp">
                                    <div class="card-body">
                                        <i class="bi bi-chat-quote-fill fs-1 text-primary mb-3"></i>
                                        <p class="card-text fst-italic">“@t.Message”</p>
                                        <h5 class="card-title mt-3">@t.Name</h5>
                                        <small class="text-muted">@t.Location</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>

<!-- 💡 CTA BANNER -->
<section class="bg-white py-5 mt-4 text-center animate__animated animate__fadeInUp">
    <h3 class="fw-bold">Discover Your Next Family Destination</h3>
    <p>
        Browse hotels, resorts, and activities through TravelTayo’s search. Plan your trip with ease and enjoy stress-free family adventures.
    </p>
    <a href="/browse" class="btn btn-outline-primary btn-lg mt-2 animate__animated animate__pulse animate__infinite">Explore Now</a>
</section>

