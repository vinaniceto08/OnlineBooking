@page "/"

<!-- 🌍 HERO SECTION -->
<section class="hero-section position-relative">
    <!-- Hero Image -->
    <img src="/images/home-bg-2.jpg" alt="Family vacation" class="img-fluid w-100" style="height: 100vh; object-fit: cover;" loading="lazy">

    <!-- Overlay -->
    <div class="hero-overlay d-flex flex-column justify-content-center align-items-center text-center p-4 position-absolute top-0 start-0 w-100 h-100">
        <h1 class="display-3 fw-bold text-white text-shadow">Plan Memorable Family Adventures</h1>
        <p class="lead text-white text-shadow">
            Explore the world with your loved ones. Find hotels, resorts, and attractions easily with TravelTayo, powered by Agoda.
        </p>
        <a href="https://www.agoda.com/?cid=1922891&tag=170bc45e-3744-4466-ae77-37eaa90a604a&gclid=CjwKCAjw89jGBhB0EiwA2o1OnxNZTp06yzF4cmXG-_17OVVKfaUejmEzsLdeFIE2CmZeA3ps6Mwp4hoCAIUQAvD_BwE&ds=DqUEogLKLotGp27t" target="_blank" class="btn btn-lg btn-warning px-5 mt-3">Start Booking Hotels</a>
        <small class="text-white mt-2">Trusted and powered by Agoda Affiliate</small>
    </div>
</section>


<!-- 🏨 AGODA HOTELS LISTING (Placeholder) -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4 fw-bold">Available Hotels</h2>
        <p class="text-center fst-italic">Hotel listings powered by Agoda API will appear here.</p>
        @* Example integration:
           <TravelTayo.Components.AgodaHotelList Destination="Bali" /> 
        *@
    </div>
</section>

<!-- 🧳 POPULAR DESTINATIONS -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">Popular Family Destinations</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var dest in popularDestinations)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                         <img src="@dest.ImageUrl" class="card-img-top" alt="@dest.Name - Family Travel Destination" loading="lazy">
                        <div class="card-body text-center">
                            <h5 class="card-title">@dest.Name</h5>
                            <p class="card-text">@dest.Description</p>
                            <a href=@dest.AgodaAffiliateLink class="btn btn-primary mt-2" target="_blank">View Hotels</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- 🌟 TESTIMONIALS -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">What Our Happy Travelers Say</h2>
        <div id="testimonialCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="6000">
            <div class="carousel-inner">
                @for (int i = 0; i < testimonials.Count; i++)
                {
                    var t = testimonials[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <div class="card border-0 shadow-lg text-center">
                                    <div class="card-body">
                                        <i class="bi bi-chat-quote-fill fs-1 text-primary mb-3"></i>
                                        <p class="card-text fst-italic">“@t.Message”</p>
                                        <h5 class="card-title mt-3">@t.Name</h5>
                                        <small class="text-muted">@t.Location</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>

<!-- 💡 CTA BANNER -->
<section class="bg-white py-5 mt-4 text-center">
    <h3 class="fw-bold">Discover Your Next Family Destination</h3>
    <p>
        Browse hotels, resorts, and activities through TravelTayo’s Agoda-powered search. 
        Plan your trip with ease and enjoy stress-free family adventures.
    </p>
    <a href="https://www.agoda.com/?cid=1922891&tag=170bc45e-3744-4466-ae77-37eaa90a604a&gclid=CjwKCAjw89jGBhB0EiwA2o1OnxNZTp06yzF4cmXG-_17OVVKfaUejmEzsLdeFIE2CmZeA3ps6Mwp4hoCAIUQAvD_BwE&ds=DqUEogLKLotGp27t" target="_blank" class="btn btn-outline-primary btn-lg mt-2">Explore Now</a>
</section>

