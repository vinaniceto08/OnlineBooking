@page "/login"
@layout MainLayout

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-5 text-center" style="max-width: 400px;">
        <img src="images/traveltayo-logo.png" alt="TravelTayo Logo" class="mb-4" style="max-height: 80px;" />
        <h2 class="mb-3">Welcome to TravelTayo</h2>
        <p class="text-muted mb-4">Sign in to book your next family getaway.</p>

        <a href="MicrosoftIdentity/Account/SignIn" class="btn btn-primary btn-lg w-100 mb-3">
            <i class="bi bi-box-arrow-in-right"></i> Sign in with Microsoft Entra
        </a>

        <small class="text-muted">Don’t have an account? You can sign up on the next page.</small>
    </div>
</div>
