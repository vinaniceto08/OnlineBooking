@page "/contact"
@layout MainLayout
@using System.ComponentModel.DataAnnotations
@inject EmailService EmailService

<!-- Hero Header -->
<section class="py-5 bg-light text-center mb-4">
    <h1 class="fw-bold text-primary">Contact TravelTayo</h1>
    <p class="lead">We’d love to hear from you! Send us a message or reach us directly.</p>
</section>

<div class="row">
    <!-- Contact Form -->
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Send us a message</h5>
                <EditForm Model="@contactModel" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <InputText id="name" class="form-control" placeholder="Your full name"
                                   @bind-Value="contactModel.Name" />
                        <ValidationMessage For="@(() => contactModel.Name)" />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <InputText id="email" type="email" class="form-control" placeholder="you@example.com"
                                   @bind-Value="contactModel.Email" />
                        <ValidationMessage For="@(() => contactModel.Email)" />
                    </div>

                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <InputTextArea id="message" class="form-control" rows="5"
                                       placeholder="Type your message here..."
                                       @bind-Value="contactModel.Message" />
                        <ValidationMessage For="@(() => contactModel.Message)" />
                    </div>

                    <button type="submit" class="btn btn-primary">Send Message</button>
                </EditForm>

                @if (!string.IsNullOrEmpty(alertMessage))
                {
                    <div class="alert @(isSuccess ? "alert-success" : "alert-danger") mt-3">
                        @alertMessage
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Contact Info -->
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Get in touch</h5>
                <p><i class="bi bi-envelope me-2 text-primary"></i> <strong>Email:</strong> support@travel-tayo.com</p>
                <p><i class="bi bi-telephone me-2 text-primary"></i> <strong>Phone:</strong> +63 919 418 52 59</p>
                <p><i class="bi bi-geo-alt me-2 text-primary"></i> <strong>Address:</strong> Manila, Philippines</p>
            </div>
        </div>

        <!-- Google Maps Embed -->
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3854.237951734915!2d120.98421961535215!3d14.599512089815498!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397ca2fdc7f4a3f%3A0x93c1f9fbcd62e8b!2sManila%2C%20Metro%20Manila%2C%20Philippines!5e0!3m2!1sen!2sph!4v1632920290101!5m2!1sen!2sph"
                        width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy">
                </iframe>
            </div>
        </div>
    </div>
</div>

@code {
    private ContactForm contactModel = new();
    private string alertMessage;
    private bool isSuccess;

    private async Task HandleValidSubmit()
    {
        try
        {
            await EmailService.SendEmailAsync(
                "support@travel-tayo.com",  // where you want to receive the message
                $"New Contact Form Message from {contactModel.Name}",
                $"<p><strong>Name:</strong> {contactModel.Name}</p>" +
                $"<p><strong>Email:</strong> {contactModel.Email}</p>" +
                $"<p><strong>Message:</strong><br/>{contactModel.Message}</p>"
            );

            isSuccess = true;
            alertMessage = $"✅ Thank you, {contactModel.Name}! Your message has been sent.";
            contactModel = new(); // reset form
        }
        catch (Exception ex)
        {
            isSuccess = false;
            alertMessage = $"❌ Oops! Something went wrong: {ex.Message}";
        }
    }

    public class ContactForm
    {
        [Required(ErrorMessage = "Name is required")]
        public string Name { get; set; }

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; }

        [Required(ErrorMessage = "Message is required")]
        public string Message { get; set; }
    }
}
